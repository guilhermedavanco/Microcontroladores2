#: import main jukebox
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

<JukeboxWidget>:
    orientation: "horizontal"
    padding: 10
    spacing: 10
    lista_musicas: lista_de_musicas
    musica_atual: musicaatual

    ListView:
        id: lista_de_musicas
        adapter:
            ListAdapter(data = [], cls=main.Lista)

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            Button:
                background_normal: "./play.png"
                background_down: "./play_dn.png"
                on_press: root.pegar_nome()

            Button:
                background_normal: "./stop.png"
                background_down: "./stop_dn.png"
                on_press: root.parar_musica()

        Label:      
            text: "Musica atual:"
            
        Label:      
            id: musicaatual
            text: ""
    
