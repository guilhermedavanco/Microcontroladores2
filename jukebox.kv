#: import main jukebox
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton

<JukeboxWidget>:
    orientation: "horizontal"
    lista_musicas: lista_de_musicas
    musica_atual: musicaatual
    screen_manager: sm
    quant_text: tocadas

    ScreenManager:
        id: sm

        Screen:
            name: "branca"
            Label:
                text: "Bem vindo"


        Screen:
            name: "dinheiro"
            BoxLayout
                orientation:"vertical"
                Image:
                    source: "./imagem.jpg"
                Label:
                    text: "Insira 2 reais"
                    font_size: 40


        Screen:
            name: "principal"
            BoxLayout:
                orientation:"horizontal"
                ListView:
                    id: lista_de_musicas
                    adapter:
                        ListAdapter(data = [], cls=main.Lista)

                BoxLayout:
                    orientation: "vertical"
                    
                    AnchorLayout:
                        anchor_y: "bottom"
                        Label:      
                            size_hint: None, None
                            id: musicaatual
                            text: ""
                            font_size: 25
                        Label:
                            id: tocadas
                            text: ""
                            font_size: 25

                    AnchorLayout:
                        anchor_y: "top"
                        BoxLayout:
                            orientation: "horizontal"
                            size_hint_y: None
                            height: 100
                            size_hint_x: None
                            width: 200

                            Button:
                                background_normal: "./play.png"
                                background_down: "./play_dn.png"
                                on_press: root.pegar_nome()


                            Button:
                                background_normal: "./stop.png"
                                background_down: "./stop_dn.png"
                                on_press: root.parar_musica()


    
